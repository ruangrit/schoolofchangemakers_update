  function changemakers_timeAgo_cmk($timestamp){
    $time = strtotime($timestamp);
    $dbDate = new DateTime($time);
    $currDate = new DateTime();
    $interval = $currDate->diff($dbDate);
    return $interval->s." sec ".$interval->i." min";
  }

